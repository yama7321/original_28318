<%= form_with model: resource,class: 'registration-main', as: resource_name, url: session_path(resource_name), local: true do |f|%> 
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報を入力してください
    </h1>
  </div>
  <div class='login-flash-message'> 
    <%= flash[:notice] %>
    <%= flash[:alert] %> 
  </div>



  <div class="form-group">
    <%= f.email_field :email, class:"input-default", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", placeholder:"パスワード" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-green-btn" %>
  </div>
</div>
<% end %>