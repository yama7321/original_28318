<%= render "shared/header" %>

<%= form_with class: 'registration-main', model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報を登録します
    </h1>
  </div>
  
  <div class="form-group">
    <%= f.text_area :nickname, class:"input-default", placeholder:"ユーザー名", maxlength:"40" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", placeholder:"パスワード（6文字以上の半角英数字）" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"確認用パスワード" %>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      <%= link_to "利用規約", "#", class:"policy-link" %>と
      <%= link_to "プライバシーポリシー", "#", class:"policy-link" %>をご覧ください
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-green-btn" %>
  </div>
</div>
<% end %>

