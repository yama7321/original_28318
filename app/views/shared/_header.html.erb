<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='nav'>
    <ul class='lists-left'>
      <%= link_to image_tag("original_logo.png", class:"furima-icon"), "/" %>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in?  %>
        <% if current_user.mentor == true %>
          <li><%= link_to "メンター情報編集", edit_profile_path(current_user.profile), class:"new-mentor-link" %></li>
        <% else %>
          <li><%= link_to "メンター登録はこちら", new_profile_path, class:"new-mentor-link" %></li>
        <% end %>
        <li><%= link_to "#{current_user.nickname}さん", user_path(current_user), class: "user-nickname" %></li>

        <%= link_to "#" do %>
        <li><%= link_to "チャット",rooms_path, class:"user-nickname"  %></li>
        <% end %>

        <li><%= link_to 'ログアウト', destroy_user_session_path , method: :delete, class: "logout" %></li> 
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録',new_user_registration_path , class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>